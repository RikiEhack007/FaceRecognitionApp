<Application x:Class="FaceRecApp.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>

        <!-- ════════════════════════════════════════════ -->
        <!--  COLOR SYSTEM — Warm Neutrals               -->
        <!-- ════════════════════════════════════════════ -->

        <!-- Backgrounds -->
        <SolidColorBrush x:Key="BgPrimary"      Color="#F5F3F0"/>
        <SolidColorBrush x:Key="BgSurface"       Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BgSurfaceDim"    Color="#EDEAE6"/>
        <SolidColorBrush x:Key="BgDark"          Color="#2D2926"/>
        <SolidColorBrush x:Key="BgCameraOff"     Color="#E8E4DF"/>

        <!-- Borders -->
        <SolidColorBrush x:Key="BorderDefault"   Color="#DAD5CE"/>
        <SolidColorBrush x:Key="BorderLight"     Color="#E8E4DF"/>

        <!-- Text -->
        <SolidColorBrush x:Key="TextPrimary"     Color="#2D2926"/>
        <SolidColorBrush x:Key="TextSecondary"   Color="#78716C"/>
        <SolidColorBrush x:Key="TextMuted"       Color="#A8A29E"/>
        <SolidColorBrush x:Key="TextOnDark"      Color="#F5F3F0"/>
        <SolidColorBrush x:Key="TextOnAccent"    Color="#FFFFFF"/>

        <!-- Accent -->
        <SolidColorBrush x:Key="AccentPrimary"   Color="#5B7F62"/>
        <SolidColorBrush x:Key="AccentHover"     Color="#4E6E55"/>
        <SolidColorBrush x:Key="AccentDanger"    Color="#B85C56"/>
        <SolidColorBrush x:Key="AccentDangerHover" Color="#A04F49"/>
        <SolidColorBrush x:Key="AccentAmber"     Color="#C49A52"/>

        <!-- Button surfaces -->
        <SolidColorBrush x:Key="BtnDefault"      Color="#EDEAE6"/>
        <SolidColorBrush x:Key="BtnDefaultHover"  Color="#E0DBD5"/>
        <SolidColorBrush x:Key="BtnDefaultPress"  Color="#D5CFC8"/>

        <!-- ════════════════════════════════════════════ -->
        <!--  TYPOGRAPHY                                  -->
        <!-- ════════════════════════════════════════════ -->

        <Style x:Key="PageTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="BodyText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="CaptionText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="MutedText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="MonoText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontFamily" Value="Cascadia Code, Consolas, monospace"/>
        </Style>

        <!-- ════════════════════════════════════════════ -->
        <!--  CARD                                        -->
        <!-- ════════════════════════════════════════════ -->

        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BgSurface}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderDefault}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="16"/>
        </Style>

        <!-- ════════════════════════════════════════════ -->
        <!--  BUTTONS                                     -->
        <!-- ════════════════════════════════════════════ -->

        <!-- Base button template (shared across all button styles) -->
        <Style x:Key="BtnBase" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BtnDefault}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource BtnDefaultHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource BtnDefaultPress}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnPrimary" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Background" Value="{StaticResource AccentPrimary}"/>
            <Setter Property="Foreground" Value="{StaticResource TextOnAccent}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="BtnDanger" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Background" Value="{StaticResource AccentDanger}"/>
            <Setter Property="Foreground" Value="{StaticResource TextOnAccent}"/>
        </Style>

        <Style x:Key="BtnSmall" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <!-- ════════════════════════════════════════════ -->
        <!--  INPUTS                                      -->
        <!-- ════════════════════════════════════════════ -->

        <Style x:Key="InputBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource BgSurface}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderDefault}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CaretBrush" Value="{StaticResource TextPrimary}"/>
        </Style>

        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- ════════════════════════════════════════════ -->
        <!--  COMBOBOX — Dark (for top bar)              -->
        <!-- ════════════════════════════════════════════ -->

        <SolidColorBrush x:Key="ComboDarkBg"       Color="#3D3835"/>
        <SolidColorBrush x:Key="ComboDarkBgHover"  Color="#4A4542"/>
        <SolidColorBrush x:Key="ComboDarkBorder"   Color="#57534E"/>
        <SolidColorBrush x:Key="ComboDarkText"     Color="#E7E5E4"/>
        <SolidColorBrush x:Key="ComboDarkItemHover" Color="#57534E"/>

        <!-- Toggle button inside the dark ComboBox -->
        <ControlTemplate x:Key="DarkComboBoxToggleButton" TargetType="ToggleButton">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="28"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="Border"
                        Grid.ColumnSpan="2"
                        Background="{StaticResource ComboDarkBg}"
                        BorderBrush="{StaticResource ComboDarkBorder}"
                        BorderThickness="1"
                        CornerRadius="4"/>
                <!-- Arrow -->
                <Path x:Name="Arrow"
                      Grid.Column="1"
                      HorizontalAlignment="Center" VerticalAlignment="Center"
                      Data="M 0 0 L 4 4 L 8 0 Z"
                      Fill="{StaticResource ComboDarkText}"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="Border" Property="Background"
                            Value="{StaticResource ComboDarkBgHover}"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Foreground" Value="{StaticResource ComboDarkText}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                          Template="{StaticResource DarkComboBoxToggleButton}"
                                          Focusable="False"
                                          ClickMode="Press"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"/>
                            <ContentPresenter x:Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="8,0,28,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left">
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource ComboDarkText}"/>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid x:Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder"
                                            Background="{StaticResource ComboDarkBg}"
                                            BorderBrush="{StaticResource ComboDarkBorder}"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Margin="0,2,0,0"/>
                                    <ScrollViewer Margin="4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True"
                                                    KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Foreground" Value="{StaticResource ComboDarkText}"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Padding" Value="8,6"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border x:Name="Bd"
                                            Background="{TemplateBinding Background}"
                                            Padding="{TemplateBinding Padding}"
                                            CornerRadius="3">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsHighlighted" Value="True">
                                            <Setter TargetName="Bd" Property="Background"
                                                    Value="{StaticResource ComboDarkItemHover}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

    </Application.Resources>
</Application>
