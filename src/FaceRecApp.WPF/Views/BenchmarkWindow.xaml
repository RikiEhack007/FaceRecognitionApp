<Window x:Class="FaceRecApp.WPF.Views.BenchmarkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Performance Benchmarks"
        Height="560" Width="660"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BgPrimary}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Performance Benchmarks"
                   Style="{StaticResource PageTitle}"/>

        <!-- Controls -->
        <WrapPanel Grid.Row="2">
            <Button x:Name="RunBenchmarkBtn"
                    Content="Run Benchmarks"
                    Click="OnRunBenchmark"
                    Style="{StaticResource BtnPrimary}"
                    Margin="0,0,8,6"/>
            <Button x:Name="PopulateBtn"
                    Content="Add 100 Synthetic"
                    Click="OnPopulate100"
                    Style="{StaticResource BtnBase}"
                    Margin="0,0,8,6"/>
            <Button x:Name="Populate1kBtn"
                    Content="Add 1,000 Synthetic"
                    Click="OnPopulate1000"
                    Style="{StaticResource BtnBase}"
                    Margin="0,0,8,6"/>
            <Button x:Name="CleanupBtn"
                    Content="Cleanup Synthetic"
                    Click="OnCleanup"
                    Style="{StaticResource BtnDanger}"
                    Margin="0,0,0,6"/>
        </WrapPanel>

        <!-- Results -->
        <Border Grid.Row="4" Style="{StaticResource Card}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="ResultsText"
                           Text="Click Run Benchmarks to start.&#10;&#10;For meaningful results, register some faces first or use the&#10;Add Synthetic buttons to populate test data."
                           Style="{StaticResource MonoText}"
                           TextWrapping="Wrap"
                           LineHeight="18"/>
            </ScrollViewer>
        </Border>

        <!-- Close -->
        <Button Grid.Row="6" Content="Close" Click="OnClose"
                Style="{StaticResource BtnBase}"
                HorizontalAlignment="Right"/>
    </Grid>
</Window>
