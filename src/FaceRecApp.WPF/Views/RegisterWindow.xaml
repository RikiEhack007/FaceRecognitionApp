<Window x:Class="FaceRecApp.WPF.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FaceRecApp.WPF.Converters"
        Title="Register New Person"
        Height="500" Width="680"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BgPrimary}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Register New Person"
                   Style="{StaticResource PageTitle}"/>

        <!-- Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="240"/>
            </Grid.ColumnDefinitions>

            <!-- Camera Preview -->
            <Border Grid.Column="0" Style="{StaticResource Card}"
                    Padding="0" ClipToBounds="True">
                <Grid>
                    <Image x:Name="PreviewImage" Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                    <TextBlock x:Name="PreviewPlaceholder"
                               Text="Camera preview"
                               Foreground="{StaticResource TextMuted}" FontSize="13"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Form -->
            <StackPanel Grid.Column="2">
                <TextBlock Text="Name" Style="{StaticResource FieldLabel}"/>
                <TextBox x:Name="NameInput" Style="{StaticResource InputBox}"
                         Margin="0,0,0,16"/>

                <TextBlock Text="Notes (optional)" Style="{StaticResource FieldLabel}"/>
                <TextBox x:Name="NotesInput" Style="{StaticResource InputBox}"
                         TextWrapping="Wrap" AcceptsReturn="True"
                         Height="60" VerticalContentAlignment="Top"
                         Margin="0,0,0,20"/>

                <TextBlock Text="INSTRUCTIONS" Style="{StaticResource SectionHeader}"
                           Margin="0,0,0,8"/>
                <TextBlock TextWrapping="Wrap" Style="{StaticResource CaptionText}"
                           LineHeight="20">
                    1. Enter the person's name
                    <LineBreak/>
                    2. Face the camera directly
                    <LineBreak/>
                    3. Click Capture &amp; Register
                </TextBlock>

                <Border Background="{StaticResource BgSurfaceDim}"
                        BorderBrush="{StaticResource BorderDefault}"
                        BorderThickness="1" CornerRadius="5"
                        Padding="12,10" Margin="0,20,0,0">
                    <TextBlock x:Name="StatusLabel"
                               Text="Ready to register"
                               Style="{StaticResource CaptionText}"
                               TextWrapping="Wrap"/>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CaptureButton"
                    Content="Capture &amp; Register"
                    Click="OnCaptureClick"
                    Style="{StaticResource BtnPrimary}"
                    Margin="0,0,8,0"/>
            <Button Content="Cancel"
                    Click="OnCancelClick"
                    Style="{StaticResource BtnBase}"/>
        </StackPanel>
    </Grid>
</Window>
