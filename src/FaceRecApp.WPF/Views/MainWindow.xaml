<Window x:Class="FaceRecApp.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:FaceRecApp.WPF.ViewModels"
        xmlns:local="clr-namespace:FaceRecApp.WPF.Converters"
        Title="Face Recognition"
        Height="720" Width="1120"
        MinHeight="520" MinWidth="860"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BgPrimary}">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ══════════════════════════════════════ -->
        <!-- TOP BAR                                -->
        <!-- ══════════════════════════════════════ -->
        <Border Grid.Row="0" Background="{StaticResource BgDark}" Padding="16,10">
            <DockPanel>
                <TextBlock DockPanel.Dock="Left"
                           Text="Face Recognition"
                           Foreground="{StaticResource TextOnDark}"
                           FontSize="15" FontWeight="SemiBold"
                           VerticalAlignment="Center"/>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="{Binding IsCameraRunning, Converter={x:Static local:Converters.CameraButtonText}}"
                            Command="{Binding ToggleCameraCommand}"
                            Style="{StaticResource BtnPrimary}"
                            Width="120" Margin="0,0,6,0"/>
                    <Button Content="Register"
                            Command="{Binding OpenRegisterCommand}"
                            Style="{StaticResource BtnBase}"
                            Foreground="{StaticResource TextOnDark}"
                            Background="#3D3835" Margin="0,0,6,0"/>
                    <Button Content="Database"
                            Command="{Binding OpenDatabaseCommand}"
                            Style="{StaticResource BtnBase}"
                            Foreground="{StaticResource TextOnDark}"
                            Background="#3D3835" Margin="0,0,6,0"/>
                    <Button Content="Benchmark"
                            Command="{Binding OpenBenchmarkCommand}"
                            Style="{StaticResource BtnBase}"
                            Foreground="{StaticResource TextOnDark}"
                            Background="#3D3835" Margin="0,0,6,0"/>
                    <Button Content="Reset Liveness"
                            Command="{Binding ResetLivenessCommand}"
                            Style="{StaticResource BtnBase}"
                            Foreground="{StaticResource TextOnDark}"
                            Background="#3D3835"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                            VerticalAlignment="Center" Margin="24,0">
                    <TextBlock Text="{Binding FpsText}" Foreground="#A8A29E" FontSize="12"
                               Margin="0,0,20,0"/>
                    <TextBlock Text="{Binding DatabaseText}" Foreground="#A8A29E" FontSize="12"
                               Margin="0,0,20,0"/>
                    <TextBlock Text="{Binding LivenessText}" Foreground="#A8A29E" FontSize="12"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- ══════════════════════════════════════ -->
        <!-- MAIN CONTENT                           -->
        <!-- ══════════════════════════════════════ -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="1*" MinWidth="260"/>
            </Grid.ColumnDefinitions>

            <!-- Camera Feed -->
            <Border Grid.Column="0" Style="{StaticResource Card}"
                    Padding="0" ClipToBounds="True">
                <Grid>
                    <Image Source="{Binding CameraFrame}"
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="NearestNeighbor"/>

                    <!-- Placeholder -->
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                Visibility="{Binding IsCameraRunning, Converter={x:Static local:Converters.InverseBoolToVis}}">
                        <TextBlock Text="Camera Off"
                                   Foreground="{StaticResource TextMuted}"
                                   FontSize="16" FontWeight="Medium"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,6"/>
                        <TextBlock Text="Click Start Camera to begin"
                                   Foreground="{StaticResource TextMuted}"
                                   FontSize="12"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Side Panel -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Detected Faces -->
                <Border Grid.Row="0" Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="DETECTED FACES" Style="{StaticResource SectionHeader}"
                                   Margin="0,0,0,10"/>

                        <ItemsControl ItemsSource="{Binding CurrentResults}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource BgSurfaceDim}"
                                            CornerRadius="4" Padding="10,8"
                                            Margin="0,0,0,6">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}"
                                                           Foreground="{StaticResource TextPrimary}"
                                                           FontSize="13" FontWeight="Medium"/>
                                                <TextBlock Foreground="{StaticResource TextSecondary}"
                                                           FontSize="11" Margin="0,2,0,0">
                                                    <Run Text="{Binding Similarity, Mode=OneWay}"/>
                                                </TextBlock>
                                            </StackPanel>
                                            <Border Grid.Column="1"
                                                    Background="{Binding StatusColor}"
                                                    CornerRadius="3" Padding="8,4"
                                                    VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Status}"
                                                           Foreground="#FFFFFF"
                                                           FontSize="10" FontWeight="Bold"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Text="No faces detected"
                                   Style="{StaticResource MutedText}"
                                   Margin="0,4,0,0"
                                   Visibility="{Binding CurrentResults.Count, Converter={x:Static local:Converters.ZeroToVisible}}"/>
                    </StackPanel>
                </Border>

                <!-- Activity Log -->
                <Border Grid.Row="2" Style="{StaticResource Card}">
                    <DockPanel>
                        <DockPanel DockPanel.Dock="Top" Margin="0,0,0,8">
                            <TextBlock Text="ACTIVITY" Style="{StaticResource SectionHeader}"
                                       DockPanel.Dock="Left" VerticalAlignment="Center"/>
                            <Button Content="Clear" Command="{Binding ClearLogCommand}"
                                    DockPanel.Dock="Right"
                                    Style="{StaticResource BtnSmall}"/>
                        </DockPanel>

                        <ListBox ItemsSource="{Binding ActivityLog}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="{StaticResource TextSecondary}"
                                 FontSize="11"
                                 FontFamily="Cascadia Code, Consolas, monospace"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="0,2"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Focusable" Value="False"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </DockPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- ══════════════════════════════════════ -->
        <!-- STATUS BAR                             -->
        <!-- ══════════════════════════════════════ -->
        <Border Grid.Row="2" Background="{StaticResource BgSurfaceDim}"
                BorderBrush="{StaticResource BorderLight}" BorderThickness="0,1,0,0"
                Padding="16,8">
            <DockPanel>
                <TextBlock DockPanel.Dock="Left"
                           Text="{Binding StatusText}"
                           Style="{StaticResource CaptionText}"/>
                <TextBlock DockPanel.Dock="Right"
                           Text="{Binding TimingText}"
                           Style="{StaticResource MonoText}"
                           HorizontalAlignment="Right"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>
